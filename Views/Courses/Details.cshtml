@model FaceAttendance.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
    </dl>
</div>
@{
    var students = (List<Student>)ViewData["Students"];
}



<h1> Students enroled on course</h1>
<div>Add Student</div>
<form asp-action="Edit">
    <div class="form-group">
        <input type="hidden" asp-for="ID" />
        <label for="StudentID" class="control-label"> Enter Student ID </label>
        <input name="StudentID" id="StudentID" class="form-control" placeholder="10237462" required type="number" />
        <button>Add Student</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Student Code
            </th>
            <th>
                Student Name
            </th>
            <th>
                ImageUrl
            </th>
            <th>
                Active
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    <img src=@Html.DisplayFor(modelItem => item.imageUrl) width="100" height="100">

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>



<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
