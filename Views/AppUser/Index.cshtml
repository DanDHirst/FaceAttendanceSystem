@model IEnumerable<FaceAttendance.Models.AppUser>

@{
    ViewData["Title"] = "Admin";
}
    <partial name="_AdminPartial" />
<h1>Index</h1>

<p>
    <a  id="register" asp-area="Identity" asp-page="/Account/Register" class="btn btn-success">Create New User <i class="fa-solid fa-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Role
            </th>
            <th>
                UserName/email
            </th>
            <th>
                Phone Number
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-info btn-sm">Edit <i class="fa-solid fa-pen-to-square"></i></a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details <i class="fa-solid fa-info"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete <i class="fa-solid fa-trash-can"></i></a>
                <a asp-action="ResetPassword" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> Reset Password <i class="fa-solid fa-key"></i></a> 
                <a href="/Identity/Account/ChangePassword" class="btn btn-danger btn-sm">Change Password <i class="fa-solid fa-key"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

